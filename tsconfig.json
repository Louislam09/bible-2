{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.css",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
